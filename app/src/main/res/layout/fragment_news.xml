<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_items_background">

    <LinearLayout
        android:id="@+id/layout_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp">
            <ImageView
                android:id="@+id/main_image_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/image_news"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <TextView
            android:id="@+id/date_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/layout_image"
            app:layout_constraintStart_toStartOf="@id/layout_image"
            app:layout_constraintTop_toTopOf="@id/layout_image"
            android:text="10 октября 2019"/>

        <TextView
            android:id="@+id/title_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/date_news"
            app:layout_constraintStart_toStartOf="@id/date_news"
            app:layout_constraintTop_toTopOf="@id/date_news"
            android:textColor="@color/text_color"
            android:text="Заголовок новости"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>