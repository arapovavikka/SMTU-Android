<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_items_background">

    <LinearLayout
        android:id="@+id/programs_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/name_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Название образовательной программы"
        android:textColor="@color/text_color"
        android:textSize="24sp"
        android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/specialty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/programs_layout"
        app:layout_constraintStart_toStartOf="@id/programs_layout"
        app:layout_constraintTop_toBottomOf="@id/programs_layout"
        android:background="#FFFFFF">
    <TextView
        android:id="@+id/name_specialty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:text="Название специальности"/>
    <View
        android:id="@+id/delimeter_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:background="@color/line_color"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>